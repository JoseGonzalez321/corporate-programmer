---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <link href="{{ site.url }}/atom.xml" rel="self" />
  <link href="{{ site.url }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>
  {% for post in site.posts %}
    <entry>
      <title>{{ post.title | titlecase }}</title>
      <link href="{{ site.url }}{{ post.url }}" />
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ site.url }}{{ post.id }}</id>
      <content type="html">
        <![CDATA[
        <figure>
          <a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">
            <img
              src="{{ site.url }}{{ site.baseurl }}/img/share/{{ post.image.filename }}.jpg"
              width="458"
              height="230"
              alt="{{ post.image.alt }}"
            />
          </a>
        </figure>
        {% if post.social-teaser %}
          <p>{{ post.social-teaser | xml_escape }}</p>
        {% else %}
          <p>{{ post.excerpt | strip_html | truncate_words: 160 | xml_escape }}</p>
        {% endif %}
        ]]>
      </content>
    </entry>
  {% endfor %}
</feed>
